<UserControl x:Class="Configuration_Tool.Controls.ControlGroupUsernameSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Configuration_Tool.Controls"
             mc:Ignorable="d" 
             Height="23">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" Margin="0,1,0,0"/>
        <TextBox Height="23" Margin="61,0,51,0" Text="{Binding Path=Username, Mode=TwoWay}"/>
        <Button HorizontalAlignment="Right" Content="Remove" Click="btnRemove_Click"/>
    </Grid>
</UserControl>
